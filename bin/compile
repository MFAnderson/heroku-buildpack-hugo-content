#!/bin/bash
# With all due credit to https://github.com/roperzh/heroku-buildpack-hugo
set -e

# Used to format the output based on heroku guidelines
# https://devcenter.heroku.com/articles/buildpack-api#style
indent() {
      RE="s/^/       /"
        sed $SED_FLAG "$RE"
}

BUILD_DIR=$1
CACHE_DIR=$2

# Create the PMM
echo "\n-----> Building the PMM"
cd $BUILD_DIR/platform-maturity-model/_static-site-generator/
npm install -g sass
npm install
